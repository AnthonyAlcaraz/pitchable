# ── Required ──────────────────────────────────────────────
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/pitchable
JWT_ACCESS_SECRET=dev-secret-change-me
JWT_REFRESH_SECRET=dev-secret-change-me

# ── Redis (local dev) ────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_URL=redis://...  # Production: use full URL instead of host/port

# ── Server ───────────────────────────────────────────────
PORT=3000
FRONTEND_URL=http://localhost:5173

# ── AI Models (optional — app works without, just no AI features) ──
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-6
OPENAI_API_KEY=

# ── Image Generation (optional) ─────────────────────────
REPLICATE_API_TOKEN=
IMGUR_CLIENT_ID=

# ── S3/MinIO (optional — defaults to local MinIO) ───────
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=pitchable-documents

# ── Stripe (optional — billing disabled without these) ──
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_STARTER_PRICE_ID=
STRIPE_PRO_PRICE_ID=
STRIPE_PACK_10_PRICE_ID=
STRIPE_PACK_25_PRICE_ID=
STRIPE_PACK_50_PRICE_ID=

# ── Email (optional) ────────────────────────────────────
RESEND_API_KEY=

# ── Omnisearch / Vault (optional) ───────────────────────
OMNISEARCH_ENABLED=false
OMNISEARCH_PORT=27123

# ── EdgeQuake Graph-RAG (optional) ──────────────────────
EDGEQUAKE_ENABLED=false
EDGEQUAKE_URL=http://localhost:8080
EDGEQUAKE_API_KEY=

# ── ZeroEntropy (optional) ──────────────────────────────
ZEROENTROPY_API_KEY=
